@model SupifyApp.ViewModels.FriendsViewModel

@{
    ViewBag.Title = "Friends";
}

<h2><b>Manage friends</b></h2>
<br />

@if (Model.friendList.Count() == 0)
{
    ViewBag.rip = "You have no friends yet. Click the add button !";
}


<div class="col-lg-12">
    <div class="col-md-2">
        <input class="btn" type="button" value="Add Friends" onclick="location.href='@Url.Action("AddFriends", "Player")'" />
        <p></p>
    </div>

    <div class="col-md-10">
        <p style="color:dimgrey">@ViewBag.rip</p>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Username")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.friendList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.ActionLink("Details", "UserDetails", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />

