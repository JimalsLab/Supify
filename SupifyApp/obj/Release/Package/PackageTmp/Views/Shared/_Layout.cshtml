<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        if (ViewBag.Title == "")
        {
            ViewBag.Title = "Home";
        }
    }
    <title>@ViewBag.Title - Supify</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <button class="invis_button" type="button" id="home_button">
                    <img src="~/Content/img/supinfy_small1.png" />
                </button>
                <p class="checkbox-inline" style="padding-left:340px"></p>
                <button class="invis_button" onclick="location.href='@Url.Action("Login", "Home")'"><p class="menu_txt" style="color:lightgray; padding-left:15px; padding-right:15px;">Login</p></button>
                <button class="invis_button" onclick="location.href='@Url.Action("Logout", "Home")'"><p class="menu_txt" style="color:lightgray; padding-left:15px; padding-right:15px;">Logout</p></button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Marble corp.</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/functions.js"></script>
    </body>
    </html>