    }
}

<img class="bandeau" src="~/Content/img/bandeau_home.jpg" />
<div>
    <div class="row">
        <br />
        <br />
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="home_space"><br /></div>
            <br />
            <h4 class="text-danger">@Model.registered</h4>
